# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
#copied from: dwightjack/dotfiles

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.sass]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.erb]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sql]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4
